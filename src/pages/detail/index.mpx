<template>
  <view class="detail_wrapper">
    <view class="box">
      <view class="slider"></view>
      <view class="content">
        <view class="name">{{ name }}</view>
        <view class="intro">
          <view class="brief">景区简介</view>
          <view class="text">{{ intro }}</view>
        </view>
        <view class="btns">
          <view class="btn btn_send" catchtap="sendFlowers">敬献鲜花</view>
          <view class="btn btn_study">学习预约</view>
        </view>
      </view>
    </view>
    <popup
      wx:if="{{isPopup}}"
    />
  </view>
</template>

<script>
  import { createPage } from '@mpxjs/core'
  import ApiConfig from '@/api/config'

  createPage({
    data: {
      name: '',
      intro: '',
      coverUrl: '',
      introVideo: {},
      photoList: [],
      isPopup: false
    },
    onLoad(options) {
      const { id } = options
      this.getDetailData(id)
    },
    onUnload() {},
    methods: {
      // 通过id获取详情页数据
      getDetailData(id) {
        wx.request({
          url: ApiConfig.GET_SCENIC_SPOT_DETAIL,
          data: { postsId: id },
          success: (res) => {
            const { status, data } = res.data
            console.info('detail:    ', data)
            if (status === 'ok') {
              const { name, intro, coverUrl, introVideo = {}, photoList = [] } = data
              this.name = name.split('·')[1]
              this.intro = intro
              console.log(coverUrl, introVideo, photoList)
            }
          }
        })
      },
      sendFlowers() {
        this.isPopup = true
      }
    }
  })
</script>


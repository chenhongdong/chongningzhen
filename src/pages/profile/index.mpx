<template>
  <view class="profile">
    <view class="top_bar">
      <view class="info" catchtap="getUserProfile">
        <view class="avatar">
          <image src="{{userInfo.avatarUrl}}" class="img" />
        </view>
        <view class="nickname">{{
          userInfo.nick.length > 0 ? userInfo.nick : '请登录'
        }}</view>
      </view>
    </view>
    <userInfo />
    <view class="my_list">
      <view class="title">我的预约</view>
      <list wx:if="{{listData.length > 0}}" listData="{{listData}}" bindcancel="cancelStudy" />
      <view class="empty" wx:else>
        <image
          class="img"
          src="https://hongselvyou.lndx-study.beihero.com/file/png/83294ef4216687320fa75e282174fd37c48cbef9cf1a2cbaf7b8e808c4f0815a.png"
        />
        <view class="tip">暂无预约信息</view>
      </view>
    </view>
  </view>
</template>

<script>
  import { createPage } from '@mpxjs/core'
  import DEF_AVATAR from '@/assets/images/avatar_def.png'
  import ApiConfig from '@/api/config'

  const defUserInfo = { avatar: DEF_AVATAR, nick: '' }
  // 给月份和日期进行补0
  const addZero = (n) => (n < 9 ? '0' + n : '' + n)

  createPage({
    data: {
      userInfo: defUserInfo,
      listData: []
    },
    onLoad() {
      this.refresh()
    },
    pageLifetimes: {
      show() {
        // 刷新列表数据
        this.refresh()

        if (typeof this.getTabBar === 'function') {
          this.getTabBar((tabBar) => {
            tabBar.setData({
              selected: 1
            })
          })
        }
      }
    },
    methods: {
      getUserProfile() {
        this.loginMp()
        wx.getUserProfile({
          desc: '用于完善资料',
          success: (res) => {
            const { avatarUrl, nickName: nick } = res.userInfo
            this.userInfo = { nick, avatarUrl }
          }
        })
      },
      refresh() {
        const token = wx.getStorageSync('token') || ''
        if (token) {
          this.getListData()
          // 拿到登录后用户的数据用来展示头像和昵称
          const info =
            (wx.getStorageSync('userInfo') && JSON.parse(wx.getStorageSync('userInfo'))) ||
            defUserInfo
          this.userInfo = info
          console.log('我的天', this.userInfo, info)
        } else {
          this.listData = []
        }
      },
      cancelStudy({ detail }) {
        wx.showModal({
          title: '确认要取消当前预约吗？',
          success: (res) => {
            if (res.confirm) {
              console.log('用户点击确定')
              this.handleCancel(detail.id)
            } else if (res.cancel) {
              console.log('用户点击取消')
            }
          }
        })
      },
      handleCancel(id) {
        const token = wx.getStorageSync('token') || ''
        wx.request({
          url: ApiConfig.DEL_STUDY_USER,
          method: 'POST',
          header: { token },
          data: { id },
          success: (res) => {
            const { status } = res.data
            if (status === 'ok') {
              // 重新请求一次列表接口
              this.getListData()
            }
          }
        })
      },
      getListData() {
        const token = wx.getStorageSync('token') || ''
        if (!token) return
        wx.request({
          url: ApiConfig.GET_MY_STUDY,
          header: { token },
          success: (res) => {
            const { status, data } = res.data
            console.log(data)
            if (status === 'ok') {
              const validInfo = data?.content.map((item) => {
                const d = new Date(item.appointDate)
                const year = d.getFullYear()
                const month = addZero(d.getMonth() + 1)
                const day = addZero(d.getDate())
                const time = year + '-' + month + '-' + day
                return { id: item.id, time, }
              })
              this.listData = validInfo
            }
          }
        })
      },
      loginMp() {
        const token = wx.getStorageSync('token') || ''
        // 如果有token值了，就不再调登录了
        if (token) return
        wx.login({
          success: (res) => {
            if (res.code) {
              wx.request({
                url: ApiConfig.OPENID_VERIFY,
                method: 'POST',
                data: { code: res.code },
                success: (val) => {
                  const { status, data } = val.data
                  if (status === 'ok') {
                    const { userToken, userInfo } = data
                    this.userInfo = userInfo
                    try {
                      // token等信息存入Storage中方便获取
                      wx.setStorageSync('token', userToken.token)
                      wx.setStorageSync('refreshToken', userToken.refreshToken)
                      wx.setStorageSync('userInfo', JSON.stringify(userInfo))
                      // 登录成功后请求列表接口，渲染预约列表
                      this.getListData()
                    } catch (e) {
                      console.err(e)
                    }
                  }
                }
              })
            } else {
              console.log('登录失败！' + res.errMsg)
            }
          }
        })
      }
    }
  })
</script>

